                  'clear': "both"
                }
              },
              {
                className: "product__img",
                styles: {
                  'height': "auto",
                  'width': 'auto',
                  'maxHeight': '200px',
                  'maxWidth': '200px'
                }
              },
              {
                className: "product__img-block",
                styles: {
                  'float': "left",
                  'display': "block",
                  'marginRight': '20px',
                  'textAlign': 'center'
                }
              },
              {
                className: "shop-breadcrumbs",
                styles: {
                  'display': "block",
                  'textAlign': "center",
                  'margin': "20px",
                  'clear': "both"
                }
              },
              {
                className: "footer",
                styles: {
                  'paddingTop': "10px"
                }
              },
              {
                className: "footer__copyright",
                styles: {
                  'paddingBottom': "20px"
                }
              }
            ]
          );
        };
